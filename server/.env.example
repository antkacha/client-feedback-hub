# База даних PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/client_feedback_hub"

# JWT конфігурація
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Сервер конфігурація
PORT=3001
NODE_ENV="development"

# Frontend URL для CORS
FRONTEND_URL="http://localhost:5173"

# Логування
LOG_LEVEL="debug"

# Обмеження розміру запитів
MAX_JSON_SIZE="10mb"
MAX_URL_ENCODED_SIZE="10mb"

# Email конфігурація (опціонально)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@clientfeedbackhub.com"

# Файлове сховище (опціонально)
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="5mb"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"