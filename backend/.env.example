# Середовище розробки
NODE_ENV=development

# Порт сервера
PORT=3001

# URL фронтенду для CORS
FRONTEND_URL=http://localhost:5173

# База даних PostgreSQL
# TODO: Замініть на ваші реальні дані підключення
DATABASE_URL="postgresql://cfh_user:cfh_password@localhost:5432/client_feedback_hub?schema=public"

# JWT секрети
# TODO: Згенеруйте сильні унікальні ключі для продакшн
JWT_SECRET="your-super-secret-jwt-key-change-in-production-128-chars-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-128-chars-long"

# Налаштування завантаження файлів
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# Налаштування email (опціонально)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Налаштування Redis (опціонально)
# REDIS_URL=redis://localhost:6379

# Логування
LOG_LEVEL=debug